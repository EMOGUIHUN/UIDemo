<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lv_up"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/w">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.0"
            android:background="@color/w"
            android:drawableTop="@mipmap/five3"
            android:gravity="center"
            android:text="首页"
            android:textSize="@dimen/font" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.0"
            android:background="@color/w"
            android:drawableTop="@mipmap/five5"
            android:gravity="center"
            android:text="情感"
            android:textSize="@dimen/font" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.0"
            android:background="@color/w"
            android:drawableTop="@mipmap/five4"
            android:gravity="center"
            android:text="消息"
            android:textSize="@dimen/font" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.0"
            android:background="@color/w"
            android:drawableTop="@mipmap/five2"
            android:gravity="center"
            android:text="附近"
            android:textSize="@dimen/font" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.0"
            android:background="@color/w"
            android:drawableTop="@mipmap/five1"
            android:gravity="center"
            android:text="我"
            android:textSize="@dimen/font" />

    </LinearLayout>
    <LinearLayout
        android:layout_above="@id/lv_up"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tv_z"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="附近"
            android:textColor="@color/w"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:textSize="@dimen/font"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_search_50"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_show_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    </LinearLayout>
</RelativeLayout>