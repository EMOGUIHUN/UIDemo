<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/Lv_xia"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1.0"
                    android:background="@color/w"
                    android:drawableTop="@mipmap/five3"
                    android:gravity="center"
                    android:text="首页"
                    android:textSize="@dimen/font" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1.0"
                    android:background="@color/w"
                    android:drawableTop="@mipmap/five5"
                    android:gravity="center"
                    android:text="情感"
                    android:textSize="@dimen/font" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1.0"
                    android:background="@color/w"
                    android:drawableTop="@mipmap/five4"
                    android:gravity="center"
                    android:text="消息"
                    android:textSize="@dimen/font" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1.0"
                    android:background="@color/w"
                    android:drawableTop="@mipmap/five2"
                    android:gravity="center"
                    android:text="附近"
                    android:textSize="@dimen/font" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1.0"
                    android:background="@color/w"
                    android:drawableTop="@mipmap/five1"
                    android:gravity="center"
                    android:text="我"
                    android:textSize="@dimen/font" />

        </LinearLayout>
         <LinearLayout
             android:layout_above="@id/Lv_xia"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/tv_ong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="情感"
                    android:gravity="center_horizontal|center_vertical"

                    android:background="@color/colorAccent"
                    android:textColor="@color/w"
                    android:textSize="@dimen/font"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/w">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1.0">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="最新"
                                    android:textSize="@dimen/font"
                                    android:layout_centerInParent="true"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1.0">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="最热门"
                                    android:textSize="@dimen/font"
                                    android:layout_centerInParent="true"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1.0">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的"
                                    android:textSize="@dimen/font"
                                    android:layout_centerInParent="true"/>

                        </RelativeLayout>
                </LinearLayout>
        </LinearLayout>

                 <ListView
                     android:id="@+id/lv_qing_gan"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"/>
         </LinearLayout>
</RelativeLayout>