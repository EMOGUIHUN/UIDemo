<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_niming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="别人眼中的幸福"
            android:textSize="@dimen/font"/>
        <TextView
            android:id="@+id/tv_shuo_shuo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="同事霞是我们办公室公认的幸福女人，老公是一为外科医生，人长得高大帅气，还有......."/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/w">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/jp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_Head"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/psb"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="鸡翅 "
                    android:textSize="@dimen/Fonts"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_adr"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广东-茂名"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="85dp"
                    android:id="@+id/dian_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:drawableLeft="@mipmap/zan"
                    android:layout_gravity="center"
                    android:textSize="@dimen/Fonts"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:background="@color/hei_se"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="55dp"
                    android:id="@+id/tv_liuyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:drawableLeft="@mipmap/discuss"
                    android:layout_gravity="center"
                    android:textSize="@dimen/Fonts"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@color/hei_se"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_tian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="441天前"
                    android:textSize="@dimen/Fonts"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>